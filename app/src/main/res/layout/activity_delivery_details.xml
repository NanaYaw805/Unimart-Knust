<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RegisterActivity">





        <LinearLayout
            android:id="@+id/the_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:padding="20dp">

            <EditText
                android:id="@+id/delivery_name"
                android:layout_width="350dp"
                android:layout_height="54dp"
                android:background="@drawable/sky_border"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Name of receiver"
                android:fontFamily="@font/timesbb"
                android:inputType="textEmailAddress"
                android:textSize="12sp"
                android:drawableLeft="@drawable/nav_profile"
                android:drawablePadding="8dp"/>



            <EditText
                android:id="@+id/delivery_number"
                android:layout_width="350dp"
                android:layout_height="54dp"
                android:background="@drawable/sky_border"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="Phone number of receiver"
                android:fontFamily="@font/timesbb"
                android:textSize="12sp"
                android:inputType="number"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"/>

            <Spinner
                android:layout_width="350dp"
                android:layout_height="54dp"
                android:id="@+id/spinner_location"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/timesbb"
                android:entries="@array/locations"
                android:textSize="12sp"
                android:background="@drawable/sky_border"/>

            <EditText
                android:id="@+id/room_number"
                android:layout_width="350dp"
                android:layout_height="54dp"
                android:background="@drawable/sky_border"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Enter room number if you want it delivered to your room"
                android:fontFamily="@font/timesbb"
                android:textSize="12sp"
                android:drawableLeft="@drawable/nav_home"
                android:drawablePadding="8dp"/>

        </LinearLayout>




    <Button
        android:id="@+id/sendToFirebase"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:text="Order"
        android:fontFamily="@font/timesbb"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:background="@drawable/sky_border"
        android:backgroundTint="@color/sky"

        />

    <ProgressBar
        android:id="@+id/simpleProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>



</LinearLayout>