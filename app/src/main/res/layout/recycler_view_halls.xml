<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/food_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Fried Rice and Chicken"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:elevation="3dp"
        />

    <ImageView
        android:id="@+id/food_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/food_name_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/supperone"/>



    <TextView
        android:id="@+id/available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/food_image_view"
        app:layout_constraintBottom_toTopOf="@+id/location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/available_time_view"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="4dp"
        android:textSize="13sp"
        android:text="Available:"
        />

    <TextView
        android:id="@+id/available_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/available"
        app:layout_constraintBottom_toBottomOf="@+id/available"
        app:layout_constraintStart_toEndOf="@+id/available"
        android:textSize="13sp"
        android:text="7am-11:30am"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/available"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/location_view"
        android:textSize="13sp"
        android:text="Location:"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        />

    <TextView
        android:id="@+id/location_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/location"
        app:layout_constraintBottom_toBottomOf="@+id/location"
        app:layout_constraintStart_toEndOf="@+id/location"
        android:text="Unity Hall"
        android:textSize="13sp"
        android:textColor="@color/teal"
        />

    <TextView
        android:id="@+id/vendor_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="13sp"
        android:text="Vendor id: "
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        />

    <TextView
        android:id="@+id/vendor_id_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/location"
        android:text="Adwoa Gobe"
        android:textSize="13sp"
        android:textColor="@color/teal"
        android:layout_marginLeft="4dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>