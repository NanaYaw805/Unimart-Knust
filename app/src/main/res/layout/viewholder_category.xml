<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="92dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/card_category_view"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/category_background"
        android:src="@drawable/breakone"/>

    <TextView
        android:id="@+id/category_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/card_category_view"
        app:layout_constraintEnd_toEndOf="@+id/card_category_view"
        app:layout_constraintStart_toStartOf="@id/card_category_view"
        android:text="Breakfast"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>